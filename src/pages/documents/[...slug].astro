---
import { getCollection, type CollectionEntry } from 'astro:content';

import DocumentLayout from '~/layouts/DocumentLayout.astro';

export async function getStaticPaths() {
  const documents = await getCollection('documents', ({ data }) => !data.draft);

  return documents.map((document) => ({
    params: {
      slug: document.data.slug || document.id,
    },
    props: { document },
  }));
}

interface Props {
  document: CollectionEntry<'documents'>;
}

const { document: documentEntry } = Astro.props;

// Use the already rendered content
const renderedContent = documentEntry.rendered?.html || documentEntry.body;

const metadata = {
  title: documentEntry.data.title,
  description: documentEntry.data.description,
  canonical: `${Astro.site}documents/${documentEntry.data.slug || documentEntry.id}`,
  openGraph: {
    type: 'article',
  },
};
---

<DocumentLayout metadata={metadata} document={documentEntry}>
  <div set:html={renderedContent} />
</DocumentLayout>
