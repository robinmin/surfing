---
import ContactForm from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import { getCurrentLanguage, t } from '~/i18n';
import Layout from '~/layouts/PageLayout.astro';

const lang = getCurrentLanguage();

const metadata = {
    title: t('contact.title', lang),
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline={t('contact.tagline', lang)} title={t('contact.subtitle', lang)} />

  <ContactForm
    id="form"
    title={t('contact.dropMessage', lang)}
    subtitle={t('contact.dropMessageSubtitle', lang)}
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: t('contact.name', lang),
      },
      {
        type: 'email',
        name: 'email',
        label: t('contact.email', lang),
      },
    ]}
    textarea={{
      label: t('contact.message', lang),
    }}
    disclaimer={{
      label: t('contact.disclaimer', lang),
    }}
    description={t('contact.responseTime', lang)}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title={t('contact.weAreHere', lang)}
    items={[
      {
        title: t('contact.generalSupport', lang),
        description: t('contact.generalSupportDesc', lang),
      },
      {
        title: t('contact.contactSales', lang),
        description: t('contact.contactSalesDesc', lang),
      },
      {
        title: t('contact.technicalSupport', lang),
        description: t('contact.technicalSupportDesc', lang),
      },
      {
        title: t('contact.phone', lang),
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: t('contact.emailContact', lang),
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: t('contact.location', lang),
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
