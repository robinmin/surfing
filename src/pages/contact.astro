---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactForm from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { getServerTranslation } from '~/i18n';

// Static site: use default language
const lang = 'en';
const t = getServerTranslation(lang);

const metadata = {
  title: t('contact.title'),
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline={t('contact.tagline')} title={t('contact.subtitle')} />

  <ContactForm
    id="form"
    title={t('contact.dropMessage')}
    subtitle={t('contact.dropMessageSubtitle')}
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: t('contact.name'),
      },
      {
        type: 'email',
        name: 'email',
        label: t('contact.email'),
      },
    ]}
    textarea={{
      label: t('contact.message'),
    }}
    disclaimer={{
      label: t('contact.disclaimer'),
    }}
    description={t('contact.responseTime')}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title={t('contact.weAreHere')}
    items={[
      {
        title: t('contact.generalSupport'),
        description: t('contact.generalSupportDesc'),
      },
      {
        title: t('contact.contactSales'),
        description: t('contact.contactSalesDesc'),
      },
      {
        title: t('contact.technicalSupport'),
        description: t('contact.technicalSupportDesc'),
      },
      {
        title: t('contact.phone'),
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: t('contact.emailContact'),
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: t('contact.location'),
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
