---
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import { DEFAULT_LANGUAGE, getServerTranslation } from '~/i18n';

// Use default language for SSG, will be updated on client
const t = getServerTranslation(DEFAULT_LANGUAGE);

const metadata = {
  title: t('pages.about.title'),
  description: t('pages.about.description'),
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      <span data-i18n="pages.about.title">{t('pages.about.title')}</span>
      <span class="text-accent dark:text-white" data-i18n="site.name">{t('site.name')}</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span data-i18n="pages.about.description">{t('pages.about.description')}</span>
    </Fragment>
  </Hero>

  <Features3
    title={t('pages.about.whatsHere')}
    titleI18n="pages.about.whatsHere"
    items={[
      {
        title: t('nav.articles'),
        description: t('pages.about.articlesDesc'),
        icon: 'tabler:notes',
        classes: {
          titleI18n: 'nav.articles',
          descriptionI18n: 'pages.about.articlesDesc',
        },
      },
      {
        title: t('nav.showcase'),
        description: t('pages.about.showcaseDesc'),
        icon: 'tabler:apps',
        classes: {
          titleI18n: 'nav.showcase',
          descriptionI18n: 'pages.about.showcaseDesc',
        },
      },
      {
        title: t('pages.about.collectedContent'),
        description: t('pages.about.collectedContentDesc'),
        icon: 'tabler:bookmarks',
        classes: {
          titleI18n: 'pages.about.collectedContent',
          descriptionI18n: 'pages.about.collectedContentDesc',
        },
      },
    ]}
  />
</Layout>
