---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features3 from '~/components/widgets/Features3.astro';
import { t, getCurrentLanguage } from '~/i18n';

const lang = getCurrentLanguage();

const metadata = {
  title: t('pages.about.title', lang),
  description: t('pages.about.description', lang),
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      <span data-i18n-key="pages.about.title">{t('pages.about.title', lang)}</span>
      <span class="text-accent dark:text-white" data-i18n-key="site.name">{t('site.name', lang)}</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span data-i18n-key="pages.about.description">{t('pages.about.description', lang)}</span>
    </Fragment>
  </Hero>

  <Features3
    title={t('pages.about.whatsHere', lang)}
    titleI18n="pages.about.whatsHere"
    items={[
      {
        title: t('nav.articles', lang),
        description: t('pages.about.articlesDesc', lang),
        icon: 'tabler:notes',
        classes: {
          titleI18n: 'nav.articles',
          descriptionI18n: 'pages.about.articlesDesc',
        },
      },
      {
        title: t('nav.showcase', lang),
        description: t('pages.about.showcaseDesc', lang),
        icon: 'tabler:apps',
        classes: {
          titleI18n: 'nav.showcase',
          descriptionI18n: 'pages.about.showcaseDesc',
        },
      },
      {
        title: t('pages.about.collectedContent', lang),
        description: t('pages.about.collectedContentDesc', lang),
        icon: 'tabler:bookmarks',
        classes: {
          titleI18n: 'pages.about.collectedContent',
          descriptionI18n: 'pages.about.collectedContentDesc',
        },
      },
    ]}
  />
</Layout>
