---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Surfing Platform',
  description: 'Learn about Surfing, the AI-powered content showcase platform designed for creators, researchers, and writers.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      About <span class="text-accent dark:text-white">Surfing</span>
    </Fragment>

    <Fragment slot="subtitle">
      A place to share content I collect and generate while working with AI.
    </Fragment>
  </Hero>


  <Features3
    title="What's Here"
    items={[
      {
        title: 'Articles',
        description: 'Technical notes and insights.',
        icon: 'tabler:notes',
      },
      {
        title: 'Showcases',
        description: 'Projects and experiments.',
        icon: 'tabler:apps',
      },
      {
        title: 'Collected Content',
        description: 'Useful things I found.',
        icon: 'tabler:bookmarks',
      },
    ]}
  />
</Layout>