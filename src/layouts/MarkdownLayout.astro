---
import Layout from '~/layouts/PageLayout.astro';
import ReadingProgress from '~/components/ui/ReadingProgress.astro';
import BackToTopButton from '~/components/ui/BackToTopButton.astro';
import TableOfContents from '~/components/ui/TableOfContents.astro';
import ReadingKeyboardNavigation from '~/components/common/ReadingKeyboardNavigation.astro';
import PageHeader from '~/components/ui/PageHeader.astro';

import type { MetaData } from '~/types';

export interface Props {
  frontmatter: {
    title?: string;
    description?: string;
    publishDate?: Date;
    updateDate?: Date;
    readingTime?: number;
    tags?: string[];
    author?: string;
  };
  metadata?: MetaData;
}

const { frontmatter, metadata: customMetadata } = Astro.props;

// Merge custom metadata with frontmatter-derived metadata
const metadata: MetaData = {
  title: frontmatter?.title,
  ...customMetadata,
};

// Headings will be extracted client-side
---

<Layout metadata={metadata}>
  <!-- Reading Progress Bar -->
  <ReadingProgress />

  <!-- Keyboard Navigation -->
  <ReadingKeyboardNavigation />

  <!-- Table of Contents -->
  <TableOfContents />

  <!-- Back to Top Button -->
  <BackToTopButton />

  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <PageHeader
      title={frontmatter.title || ''}
      description={frontmatter.description}
      publishDate={frontmatter.publishDate}
      updateDate={frontmatter.updateDate}
      tags={frontmatter.tags}
      author={frontmatter.author}
    />
    <div
      class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary hover:prose-a:underline dark:prose-a:text-primary prose-img:rounded-md prose-img:shadow-lg prose-code:text-sm prose-code:bg-gray-100 dark:prose-code:bg-gray-800 prose-pre:bg-gray-100 dark:prose-pre:bg-gray-800 mt-8 reading-text"
    >
      <slot />
    </div>
  </section>
</Layout>
