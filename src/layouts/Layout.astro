---
import '@assets/styles/tailwind.css'

// Comment the line below to disable View Transitions
import { ClientRouter } from 'astro:transitions'
import { I18N } from 'astrowind:config'
import CustomStyles from '~/components/CustomStyles.astro'
import Analytics from '~/components/common/Analytics.astro'
import ApplyColorMode from '~/components/common/ApplyColorMode.astro'
import BasicScripts from '~/components/common/BasicScripts.astro'
import CodeBlockCopyFix from '~/components/common/CodeBlockCopyFix.astro'
import CommonMeta from '~/components/common/CommonMeta.astro'
import ContentFilter from '~/components/common/ContentFilter.astro'
import GoogleAdsLoader from '~/components/common/GoogleAdsLoader.astro'
import GoogleAdsMeta from '~/components/common/GoogleAdsMeta.astro'
import Metadata from '~/components/common/Metadata.astro'
import Schema from '~/components/common/Schema.astro'
import SiteVerification from '~/components/common/SiteVerification.astro'
import TranslationUpdater from '~/components/common/TranslationUpdater.astro'
import Favicons from '~/components/Favicons.astro'

import type { MetaData as MetaDataType } from '~/types'

export interface Props {
  metadata?: MetaDataType
}

const { metadata = {} } = Astro.props
const { language, textDirection } = I18N
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <ApplyColorMode />
    <Metadata {...metadata} dontUseTitleTemplate={!!metadata?.title} />
    <SiteVerification />
    <GoogleAdsMeta />
    <GoogleAdsLoader />
    <Analytics />
    <Schema {metadata} />
    <slot name="head" />

    <!-- Comment the line below to disable View Transitions -->
    <ClientRouter fallback="swap" />
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary focus:text-white focus:rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
    >
      Skip to main content
    </a>
    <slot />

    <BasicScripts />
    <!-- TranslationUpdater disabled: SSR mechanism (ContentFilter) reloads page with correct language -->
    <TranslationUpdater />
    <CodeBlockCopyFix />
    <ContentFilter />
  </body>
</html>
